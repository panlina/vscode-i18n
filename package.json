{
	"name": "vscode-i18n",
	"displayName": "vscode-i18n",
	"description": "VS Code extension for @jacklu/babel-plugin-i18n",
	"version": "0.0.0",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/panlina/vscode-i18n.git"
	},
	"author": "Jack Lu <jacklu@jacklu.me>",
	"activationEvents": [
		"workspaceContains:i18n.config.js"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "i18n.explorer.generateDictionary",
				"title": "Generate Dictionary"
			},
			{
				"command": "i18n.explorer.generateReport",
				"title": "Generate Report"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "i18n.explorer.generateDictionary"
				},
				{
					"command": "i18n.explorer.generateReport"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/babel__core": "^7.1.6",
		"@types/vscode": "^1.42.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	},
	"dependencies": {
		"@babel/core": "^7.8.4",
		"detect-indent": "^6.1.0"
	}
}
